{
	"compilerOptions": {
		"baseUrl": "./src",
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
		"strict": true,
		"paths": {
			"~/*": [ "./*" ]
		},
		"types": []
	},
	"include": [
		"./src/**/*"
	]
}
