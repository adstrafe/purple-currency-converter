{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"esModuleInterop": true,
		"lib": [
			"ESNext"
		],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"skipLibCheck": true,
		"strict": true,
		"paths": {
			"~/*": ["./*"]
		},
		"target": "ESNext",
		"types": [
			"node"
		]
	},
	"include": [
		"./src/**/*"
	]
}
